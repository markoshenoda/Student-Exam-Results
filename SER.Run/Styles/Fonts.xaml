<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=System.Runtime">

    <sys:Double x:Key="TitleFontSize">30</sys:Double>
    <sys:Double x:Key="NormalFontSize">20</sys:Double>
    <sys:Double x:Key="ErrorFontSize">16</sys:Double>

    <FontFamily x:Key="TitleFontFamily">/Fonts/#AlSharkTitle</FontFamily>
    <FontFamily x:Key="NormalFontFamily">/Fonts/#Shorooq_N1</FontFamily>

</ResourceDictionary>